#PBS -S /bin/bash
#PBS -q main
#PBS -l walltime=48:10:00
#PBS -l select=1:ncpus=1:mem=56GB

if [ ${U} -eq 0 ]
then
#PBS -o L8U0.out
#PBS -e L8U0.err
#PBS -n L8U0
fi

if [ ${U} -eq 1 ]
then
#PBS -o L8U1.out
#PBS -e L8U1.err
#PBS -n L8U1
fi

if [ ${U} -eq 2 ]
then
#PBS -o L8U2.out
#PBS -e L8U2.err
#PBS -n L8U2
fi

if [ ${U} -eq 4 ]
then
#PBS -o L8U4.out
#PBS -e L8U4.err
#PBS -n L8U4
fi

if [ ${U} -eq 6 ]
then
#PBS -o L8U6.out
#PBS -e L8U6.err
#PBS -n L8U6
fi

if [ ${U} -eq 8 ]
then
#PBS -o L8U8.out
#PBS -e L8U8.err
#PBS -n L8U8
fi



cd $PBS_O_WORKDIR

echo "U: ${U}";
./Hubbard t=1.0 U=${U} time=16 dTime=0.05 L=8 exp=2 state=Up-Up-Up-Up-Dn-Dn-Dn-Dn Silent=1 maxDim=1600  niter=40 > L8U${U}.data

qstat -f $PBS_JOBID | grep resources_used.vmem
qstat -f $PBS_JOBID | grep resources_used.walltime
